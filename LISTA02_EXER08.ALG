   leia(a,b,c)
   delta <- b^2 - 4*a*c
   se (delta > 0) entao
      x1 <- (-b + raizq(delta))/(2*a)
      x2 <- (-b - raizq(delta))/(2*a)
      escreval ("A equa巫o tem 2 raizes reais:",x1," e",x2)
   senao
