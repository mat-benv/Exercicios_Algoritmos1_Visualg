algoritmo "lista1_exer01"
var
   raio: real
   area: real
   circunferencia:real
inicio
      escreva("Digite o raio do círculo: "        )
      leia (raio)
      area <- pi*raio^2
      escreval("A área é igual a",area,".")
      circunferencia <- 2*pi*raio
      escreva ("A circunferência é",circunferencia,".")

fimalgoritmo
